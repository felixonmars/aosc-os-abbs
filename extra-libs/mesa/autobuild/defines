             -Dglvnd=true \
             -Dglx=dri \
             -Dllvm=false \
             -Dlmsensors=false \
             -Dshared-glapi=true \
             -Dvalgrind=false \
             -Db_lto=true \
             -Dlibunwind=disabled"
MESON_AFTER__I486=" \
             ${MESON_AFTER__RETRO} \
             -Ddri-drivers=i915,i965,r100,r200,nouveau \
             -Dgallium-drivers=r300,r600,nouveau \
